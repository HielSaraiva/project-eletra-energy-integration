<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/22"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.controllers.MainController">
	<bottom>
		<VBox prefHeight="600.0" prefWidth="600.0"
			BorderPane.alignment="CENTER">
			<children>
				<Label alignment="TOP_LEFT" prefHeight="32.0"
					prefWidth="323.0" text="Autor: Hiel Saraiva Freitas de Queiroga">
					<VBox.margin>
						<Insets left="10.0" top="10.0" />
					</VBox.margin>
				</Label>
				<Separator prefWidth="200.0" />
				<Accordion>
					<panes>
						<TitledPane fx:id="titledPaneLinhas"
							alignment="TOP_LEFT" animated="true" prefWidth="1280.0"
							text="Linhas">
							<content>
								<HBox prefWidth="1280.0">
									<children>
										<Label alignment="TOP_LEFT" text="Selecione uma Linha">
											<HBox.margin>
												<Insets right="20.0" />
											</HBox.margin>
										</Label>
										<ComboBox fx:id="comboBox"
											onAction="#aoSelecionarLinha" prefWidth="150.0" />
									</children>
								</HBox>
							</content>
						</TitledPane>
						<TitledPane fx:id="titledPaneModelos"
							alignment="TOP_LEFT" animated="true" disable="true"
							prefWidth="1280.0" text="Modelos">
							<content>
								<HBox prefHeight="400.0" prefWidth="1280.0">
									<children>
										<Label text="Lista de Modelos">
											<HBox.margin>
												<Insets right="10.0" />
											</HBox.margin>
										</Label>
										<TreeView fx:id="treeView" maxHeight="275"
											prefWidth="200.0">
											<TreeItem fx:id="treeItem" />
										</TreeView>
									</children>
								</HBox>
							</content>
						</TitledPane>
					</panes>
				</Accordion>
			</children>
		</VBox>
	</bottom>
</BorderPane>
